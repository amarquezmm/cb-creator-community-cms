{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string"
    },
    "eventDescription": {
      "type": "text"
    },
    "Organizer": {
      "type": "string"
    },
    "eventThumb": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "eventHero": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "startDate": {
      "type": "date"
    },
    "endDate": {
      "type": "date"
    },
    "Location": {
      "type": "string"
    },
    "eventLink": {
      "type": "string"
    },
    "eventContent": {
      "type": "dynamiczone",
      "components": [
        "shared.rich-text",
        "shared.media"
      ]
    },
    "event_category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::event-categories.event-category"
    }
  }
}
