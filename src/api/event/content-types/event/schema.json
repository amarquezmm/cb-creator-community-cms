{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string"
    },
    "eventDescription": {
      "type": "text"
    },
    "Date": {
      "type": "datetime"
    },
    "Image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Location": {
      "type": "string"
    },
    "eventContent": {
      "type": "dynamiczone",
      "components": [
        "shared.rich-text",
        "shared.media"
      ]
    }
  }
}
